<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>

   <extension
         id="product"
         point="org.eclipse.core.runtime.products">
      <product
            name="redisclient_e4"
            application="org.eclipse.e4.ui.workbench.swt.E4Application">
         <property
               name="lifeCycleURI"
               value="bundleclass://redisclient_e4/redisclient_e4.E4LifeCycle">
         </property>
         <property
               name="applicationCSS"
               value="platform:/plugin/redisclient_e4/css/default.css">
         </property>
         <property
               name="appName"
               value="redisclient_e4">
         </property>
      </product>
   </extension>
   <extension
         point="org.eclipse.core.expressions.definitions">
      <definition
            id="rootmenu">
         <with
               variable="org.eclipse.ui.selection">
            <instanceof
                  value="redisclient_e4.models.RedisTreeNode">
            </instanceof>
            <test
                  property="redisclient_e4.serverMenu"
                  value="selectRoot">
            </test>
         </with>
      </definition>
      <definition
            id="servermenu">
         <with
               variable="org.eclipse.ui.selection">
            <instanceof
                  value="redisclient_e4.models.RedisTreeNode">
            </instanceof>
            <test
                  property="redisclient_e4.serverMenu"
                  value="selectServer">
            </test>
         </with>
      </definition>
      <definition
            id="datanodemenu">
         <with
               variable="org.eclipse.ui.selection">
            <instanceof
                  value="redisclient_e4.models.RedisTreeNode">
            </instanceof>
            <test
                  property="redisclient_e4.serverMenu"
                  value="selectNode">
            </test>
         </with>
      </definition>
   </extension>
   <extension
         point="org.eclipse.core.expressions.propertyTesters">
      <propertyTester
            class="redisclient_e4.propertyTest.ServerMenuPropertyTester"
            id="redisclient_e4.propertyTest.ServerMenuPropertyTester"
            namespace="redisclient_e4"
            properties="serverMenu"
            type="java.lang.Object">
      </propertyTester>
   </extension>

</plugin>
